<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.StudentFormController"
            stylesheets="@styles.css"
            styleClass="root-container">

    <BorderPane prefWidth="1200" prefHeight="800"
                AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- TOP BAR -->
        <top>
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-header">
                <padding>
                    <Insets top="20" bottom="20" left="30" right="30"/>
                </padding>

                <Button text="←" onAction="#back"
                        styleClass="btn-back-outline"/>

                <Text text="eDiploma" styleClass="app-title"/>
            </HBox>
        </top>

        <!-- CONTENT -->
        <center>
            <ScrollPane fitToWidth="true" styleClass="cards-scroll-pane">
                <content>
                    <StackPane>

                        <VBox spacing="20">
                            <padding>
                                <Insets top="30" right="50" bottom="30" left="50"/>
                            </padding>

                            <!-- TITLE -->
                            <VBox spacing="5">
                                <Text fx:id="formTitle" text="Dodaj novog studenta" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                                <Text fx:id="formSubtitle" text="Unesite podatke o novom studentu" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                            </VBox>

                            <GridPane hgap="30" vgap="20">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                                    <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                                </columnConstraints>

                                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <Label text="Ime studenta" styleClass="field-label"/>
                                    <TextField fx:id="firstNameField" promptText="Unesite ime" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <Label text="Ime oca" styleClass="field-label"/>
                                    <TextField fx:id="fatherNameField" promptText="Unesite ime oca" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <Label text="Prezime" styleClass="field-label"/>
                                    <TextField fx:id="lastNameField" promptText="Unesite prezime" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <Label text="Email adresa" styleClass="field-label"/>
                                    <TextField fx:id="emailField" promptText="Unesite email adresu" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                    <Label text="Datum rođenja" styleClass="field-label"/>
                                    <DatePicker fx:id="birthDatePicker" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <Label text="Mjesto rođenja" styleClass="field-label"/>
                                    <TextField fx:id="birthPlaceField" promptText="Unesite mjesto rođenja" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="3">
                                    <Label text="Općina" styleClass="field-label"/>
                                    <TextField fx:id="municipalityField" promptText="Unesite općinu" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                    <Label text="Država" styleClass="field-label"/>
                                    <TextField fx:id="countryField" promptText="Unesite državu" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="4">
                                    <Label text="Broj indeksa" styleClass="field-label"/>
                                    <TextField fx:id="indexNumberField" promptText="Unesite broj indeksa" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                    <Label text="Studijski program" styleClass="field-label"/>
                                    <ComboBox fx:id="studyProgramComboBox" promptText="Izaberite program" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="5">
                                    <Label text="ECTS" styleClass="field-label"/>
                                    <TextField fx:id="ectsField" promptText="Unesite ECTS bodove" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="5">
                                    <Label text="Ciklus studija" styleClass="field-label"/>
                                    <ComboBox fx:id="cycleComboBox" promptText="Izaberite ciklus" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="6">
                                    <Label text="Trajanje ciklusa" styleClass="field-label"/>
                                    <TextField fx:id="cycleDurationField" promptText="Unesite trajanje" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                                <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="6">
                                    <Label text="Status" styleClass="field-label"/>
                                    <ComboBox fx:id="statusComboBox" promptText="Izaberite status" maxWidth="Infinity" styleClass="form-field"/>
                                </VBox>

                            </GridPane>

                            <!-- ACTIONS -->
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <!-- Delete button (left side, visible only in edit mode) -->
                                <Button fx:id="deleteButton" text="Obriši" onAction="#handleDelete"
                                        styleClass="delete-button" visible="false" managed="false"/>

                                <Region HBox.hgrow="ALWAYS"/>

                                <!-- Cancel and Save buttons (right side) -->
                                <Button text="Odustani" onAction="#back" styleClass="cancel-button"/>
                                <Button text="Sačuvaj" onAction="#handleSave" styleClass="save-button"/>
                            </HBox>
                        </VBox>

                        <ProgressIndicator fx:id="loader"
                                           visible="false"
                                           prefWidth="60"
                                           prefHeight="60"
                                           StackPane.alignment="CENTER"/>
                    </StackPane>
                </content>
            </ScrollPane>
        </center>
    </BorderPane>
</AnchorPane>
