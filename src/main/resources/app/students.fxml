<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            styleClass="root-container" stylesheets="@styles.css"
            fx:controller="controller.StudentsController">

    <!-- Main Content Area -->
    <center>
        <VBox styleClass="main-content" spacing="25">
            <padding>
                <Insets top="40" right="50" bottom="40" left="50"/>
            </padding>

            <!-- Page Header -->
            <VBox spacing="8">
                <Text text="Studenti" styleClass="page-title"/>
                <Text text="Kompletan pregled i upravljanje studentima" styleClass="page-subtitle"/>
            </VBox>

            <!-- Action Bar -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <!-- Search Field -->
                <TextField fx:id="searchField" promptText="ðŸ” PretraÅ¾ite studente..."
                           styleClass="search-field" prefWidth="450"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Add New Button -->
                <Button fx:id="addStudentButton" text="+ Dodaj novog studenta" styleClass="add-button"/>
            </HBox>

            <!-- Student Cards Container (ScrollPane) -->
            <StackPane VBox.vgrow="ALWAYS">
                <ScrollPane fitToWidth="true" styleClass="cards-scroll-pane">
                    <VBox fx:id="studentsCardsContainer" spacing="15" styleClass="cards-container"/>
                </ScrollPane>

                <!-- Loader (ProgressIndicator) for loading state -->
                <ProgressIndicator fx:id="loader" visible="false" prefWidth="50" prefHeight="50"/>
            </StackPane>
        </VBox>
    </center>

</BorderPane>
