<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AddStudentController"
            style="-fx-background-color: #f9f9f9;">
    <BorderPane prefHeight="800.0" prefWidth="1200.0">
        <top>
            <HBox alignment="CENTER_LEFT" prefHeight="60" spacing="20"
                  style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;"
                  BorderPane.alignment="CENTER">
                <padding>
                    <Insets left="20" top="20" />
                </padding>
                <Button onAction="#handleBack"
                        style="-fx-font-size: 18; -fx-background-color: transparent; -fx-cursor: hand;"
                        text="←" />
                <Label style="-fx-font-size: 20; -fx-font-weight: bold;"
                       text="eDiploma" />
            </HBox>
        </top>
        <center>
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox spacing="20" BorderPane.alignment="CENTER" style="-fx-background-color: #f9f9f9;">
                    <padding>
                        <Insets top="30" right="50" bottom="30" left="50"/>
                    </padding>

                    <!-- Title Section -->
                    <VBox spacing="5">
                        <Label text="Dodaj novog studenta" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
                        <Label text="Unesite podatke o novom studentu" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    </VBox>

                    <Separator/>

                    <!-- Basic Info Section -->
                    <Label text="Osnovni podaci" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

                    <!-- Two column layout -->
                    <GridPane hgap="20" vgap="15">
                        <!-- Left Column -->
                        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="Ime studenta" style="-fx-font-size: 14;"/>
                            <TextField fx:id="firstNameField" promptText="Unesite ime studenta"
                                       style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                        </VBox>

                        <!-- Right Column -->
                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="Ime oca" style="-fx-font-size: 14;"/>
                            <TextField fx:id="fatherNameField" promptText="Unesite ime oca"
                                       style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="Prezime" style="-fx-font-size: 14;"/>
                            <TextField fx:id="lastNameField" promptText="Unesite prezime studenta"
                                       style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Label text="Email adresa" style="-fx-font-size: 14;"/>
                            <TextField fx:id="emailField" promptText="Unesite email adresu profesora"
                                       style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <Label text="Datum rođenja" style="-fx-font-size: 14;"/>
                            <DatePicker fx:id="birthDatePicker" promptText="Izaberite datum"
                                        style="-fx-pref-height: 40; -fx-background-radius: 8;" prefWidth="9999"/>
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <Label text="Mjesto rođenja" style="-fx-font-size: 14;"/>
                            <TextField fx:id="birthPlaceField" promptText="Unesite mesto rođenja studenta"
                                       style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <Label text="Općina" style="-fx-font-size: 14;"/>
                            <TextField fx:id="municipalityField" promptText="Unesite opštinu"
                                       style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <Label text="Država" style="-fx-font-size: 14;"/>
                            <TextField fx:id="countryField" promptText="Unesite državu"
                                       style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="4">
                            <Label text="Broj indeksa" style="-fx-font-size: 14;"/>
                            <TextField fx:id="indexNumberField" promptText="Unesite broj indeksa"
                                       style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <Label text="Studijski program" style="-fx-font-size: 14;"/>
                            <TextField fx:id="studyProgramField" promptText="Izaberite program"
                                       style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="5">
                            <Label text="ECTS" style="-fx-font-size: 14;"/>
                            <TextField fx:id="ectsField" promptText="Unesite ECTS bodove"
                                       style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <Label text="Ciklus studija" style="-fx-font-size: 14;"/>
                            <TextField fx:id="cycleField" promptText="Izaberite ciklus"
                                       style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="6">
                            <Label text="Trajanje ciklusa" style="-fx-font-size: 14;"/>
                            <TextField fx:id="cycleDurationField" promptText="Unesite trajanje ciklusa studija"
                                       style="-fx-pref-height: 40; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8;"/>
                        </VBox>

                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="6">
                            <Label text="Status" style="-fx-font-size: 14;"/>
                            <ComboBox fx:id="statusComboBox" promptText="Izaberite status studenta"
                                      style="-fx-pref-height: 40; -fx-background-radius: 8;" prefWidth="9999"/>
                        </VBox>

                        <columnConstraints>
                            <ColumnConstraints percentWidth="50"/>
                            <ColumnConstraints percentWidth="50"/>
                        </columnConstraints>
                    </GridPane>

                    <Separator/>

                    <!-- Action Buttons -->
                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <Button text="Odustani" onAction="#handleCancel"
                                style="-fx-background-color: white; -fx-text-fill: #333; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-radius: 8; -fx-padding: 10 30 10 30; -fx-cursor: hand;"/>
                        <Button text="Sačuvaj" onAction="#handleSave"
                                style="-fx-background-color: #4f5dff; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 10 30 10 30; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>
            </ScrollPane>
        </center>
    </BorderPane>
</AnchorPane>
