<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SecretaryDashboardController">

    <BorderPane fx:id="mainBorderPane" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <top>
            <HBox alignment="CENTER" prefHeight="60" spacing="20" style="-fx-background-color: white;             -fx-border-color: #e0e0e0;             -fx-border-width: 0 0 1 0;">

                <padding>
                    <Insets bottom="20" left="20" top="20" />
                </padding>

                <Label style="-fx-font-size: 30; -fx-font-weight: bold; -fx-text-fill: #4f5dff" text="eDiploma - Sekretar" />
            </HBox>
        </top>

        <!-- Left sidebar with only "Završni radovi" option -->
        <left>
            <VBox prefWidth="240" spacing="4.0" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 0 1 0 0;">

                <padding>
                    <Insets bottom="20.0" top="30.0" />
                </padding>


                <Label fx:id="radoviLabel" onMouseClicked="#handleRadoviClick" style="-fx-cursor: hand;                               -fx-padding: 12 20 12 20;                               -fx-font-size: 14;                               -fx-font-weight: 500;                               -fx-text-fill: #424242;                               -fx-background-radius: 8;                               -fx-background-color: transparent;" text="Završni radovi">
                    <VBox.margin>
                        <Insets left="12.0" right="12.0" />
                    </VBox.margin>
                </Label>

                <Region VBox.vgrow="ALWAYS" />

                <Separator style="-fx-background-color: #f0f0f0;">
                    <VBox.margin>
                        <Insets bottom="16.0" />
                    </VBox.margin>
                </Separator>

                <Label fx:id="lblOdjava" onMouseClicked="#handleLogout" style="-fx-cursor: hand;                               -fx-font-size: 14;                               -fx-font-weight: 600;                               -fx-text-fill: #d32f2f;                               -fx-padding: 12 20 12 20;                               -fx-background-radius: 8;                               -fx-background-color: transparent;" text="Odjava">
                    <VBox.margin>
                        <Insets left="12.0" right="12.0" />
                    </VBox.margin>
                </Label>
            </VBox>
        </left>

        <!-- CENTER CONTENT -->
        <center>
            <StackPane style="-fx-background-color: #f9f9f9;">
                <BorderPane.margin>
                    <Insets />
                </BorderPane.margin>
            </StackPane>
        </center>

    </BorderPane>

</AnchorPane>
