<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.SVGPath?>
<?import org.controlsfx.control.SearchableComboBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.ThesisFormController"
            stylesheets="@styles.css"
            styleClass="root-container">

    <BorderPane prefWidth="1200" prefHeight="800"
                AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- TOP BAR -->
        <top>
            <HBox alignment="CENTER_LEFT" spacing="20" styleClass="top-header">
                <padding>
                    <Insets top="20" bottom="20" left="30" right="30"/>
                </padding>

                <Button text="←" onAction="#back"
                        styleClass="btn-back-outline"/>

                <Text text="eDiploma" styleClass="app-title"/>
            </HBox>
        </top>

        <!-- CONTENT -->
        <center>
            <ScrollPane fitToWidth="true" styleClass="cards-scroll-pane">
                <VBox spacing="25" styleClass="main-content">
                    <padding>
                        <Insets top="30" right="50" bottom="30" left="50"/>
                    </padding>

                    <!-- TITLE -->
                    <VBox spacing="5">
                        <Text fx:id="formTitle" text="Dodaj novi završni rad" styleClass="page-title"/>
                        <Text fx:id="formSubtitle" text="Unesite podatke o novom završnom radu" styleClass="page-subtitle"/>
                    </VBox>

                    <!-- FORM SECTION 1: Osnovni podaci -->
                    <VBox spacing="20" styleClass="form-section">
                        <padding>
                            <Insets top="25" right="30" bottom="25" left="30"/>
                        </padding>

                        <VBox spacing="3">
                            <Text text="Osnovni podaci" styleClass="section-title"/>
                            <Text text="Osnovne informacije o završnom radu"
                                  styleClass="page-subtitle"/>
                        </VBox>

                        <GridPane hgap="20" vgap="15">
                            <VBox spacing="5"
                                  GridPane.columnIndex="0"
                                  GridPane.rowIndex="0"
                                  GridPane.columnSpan="2">
                                <Label text="Naslov rada *"
                                       styleClass="field-label"/>
                                <TextField fx:id="titleField"
                                           promptText="Unesite naslov završnog rada"
                                           styleClass="form-field"/>
                            </VBox>

                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                                <Label text="Cilj rada:" styleClass="field-label"/>
                                <TextArea fx:id="descriptionArea"
                                          prefHeight="100"
                                          wrapText="true"
                                          promptText="Unesite kratak opis..."
                                          styleClass="form-field"/>
                            </VBox>

                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                                <Label text="Predložena struktura rada (poglavlja):" styleClass="field-label"/>
                                <TextArea fx:id="structureArea"
                                          prefHeight="200"
                                          wrapText="true"
                                          promptText="Unesite predloženu strukturu rada..."
                                          styleClass="form-field"/>
                            </VBox>

                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
                                <Label text="Literatura:" styleClass="field-label"/>
                                <TextArea fx:id="literatureArea"
                                          prefHeight="200"
                                          wrapText="true"
                                          promptText="Unesite reference..."
                                          styleClass="form-field"/>
                            </VBox>

                            <VBox spacing="5"
                                  GridPane.columnIndex="0"
                                  GridPane.rowIndex="4">
                                <Label text="Datum prijave *"
                                       styleClass="field-label"/>
                                <DatePicker fx:id="applicationDatePicker"
                                            prefWidth="9999"
                                            styleClass="form-field"/>
                            </VBox>

                            <!-- NOVI CHECKBOX: Položio sve ispite -->
                            <VBox spacing="5"
                                  GridPane.columnIndex="1"
                                  GridPane.rowIndex="4">
                                <Label text="Status ispita"
                                       styleClass="field-label"/>
                                <CheckBox fx:id="passedSubjectsCheckBox"
                                          text="Student je položio sve ispite"
                                          selected="true"
                                          maxWidth="Infinity"
                                          styleClass="status-checkbox"/>
                            </VBox>

                            <VBox fx:id="approvalDateContainer" spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="5"
                                  visible="false" managed="false">
                                <Label text="Datum sjednice komisije" styleClass="field-label"/>
                                <DatePicker fx:id="approvalDatePicker" prefWidth="9999" styleClass="form-field"/>
                            </VBox>

                            <VBox fx:id="gradeContainer" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="5"
                                  visible="false" managed="false">
                                <Label text="Ocjena" styleClass="field-label"/>
                                <TextField fx:id="gradeField" promptText="6-10" styleClass="form-field"/>
                            </VBox>

                            <VBox fx:id="defenseDateContainer" spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="6"
                                  visible="false" managed="false">
                                <Label text="Datum odbrane" styleClass="field-label"/>
                                <DatePicker fx:id="defenseDatePicker" prefWidth="9999" styleClass="form-field"/>
                            </VBox>


                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>
                        </GridPane>
                    </VBox>

                    <!-- FORM SECTION 2: Učesnici -->
                    <VBox spacing="20" styleClass="form-section">
                        <padding>
                            <Insets top="25" right="30" bottom="25" left="30"/>
                        </padding>

                        <VBox spacing="3">
                            <Text text="Učesnici" styleClass="section-title"/>
                            <Text text="Student, mentor i sekretar" styleClass="page-subtitle"/>
                        </VBox>

                        <GridPane hgap="20" vgap="15">
                            <!-- Student -->
                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label text="Student *" styleClass="field-label"/>
                                <SearchableComboBox fx:id="studentComboBox" promptText="Izaberite studenta"
                                          prefWidth="9999" styleClass="form-field"/>
                            </VBox>

                            <!-- Mentor -->
                            <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <Label text="Mentor *" styleClass="field-label"/>
                                <SearchableComboBox fx:id="mentorComboBox" promptText="Izaberite mentora"
                                          prefWidth="9999" styleClass="form-field"/>
                            </VBox>

                            <!-- Sekretar -->
                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                <Label text="Sekretar *" styleClass="field-label"/>
                                <SearchableComboBox fx:id="secretaryComboBox" promptText="Izaberite sekretara"
                                          prefWidth="9999" styleClass="form-field"/>
                            </VBox>

                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>
                        </GridPane>
                    </VBox>

                    <!-- FORM SECTION 3: Administrativni podaci -->
                    <VBox spacing="20" styleClass="form-section">
                        <padding>
                            <Insets top="25" right="30" bottom="25" left="30"/>
                        </padding>

                        <VBox spacing="3">
                            <Text text="Administrativni podaci" styleClass="section-title"/>
                            <Text text="Katedra i predmet" styleClass="page-subtitle"/>
                        </VBox>

                        <GridPane hgap="20" vgap="15">
                            <!-- Katedra -->
                            <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                <Label text="Katedra *" styleClass="field-label"/>
                                <ComboBox fx:id="departmentComboBox" promptText="Izaberite katedru"
                                          prefWidth="9999" styleClass="form-field"/>
                            </VBox>

                            <!-- Predmet -->
                            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="BOTTOM_LEFT">
                                <VBox spacing="5" HBox.hgrow="ALWAYS">
                                    <Label text="Predmet *" styleClass="field-label"/>
                                    <SearchableComboBox fx:id="subjectComboBox" promptText="Izaberite predmet"
                                                        prefWidth="9999" styleClass="form-field"/>
                                </VBox>
                                <Button fx:id="addSubjectButton"
                                        onAction="#handleAddSubject"
                                        styleClass="add-subject-button">
                                    <graphic>
                                        <SVGPath content="M24 10h-10v-10h-4v10h-10v4h10v10h4v-10h10z" styleClass="plus-icon"/>
                                    </graphic>
                                </Button>
                            </HBox>
                            <!-- Status (EDIT ONLY) -->
                            <VBox fx:id="statusContainer" spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1"
                                  visible="false" managed="false">
                                <Label text="Status" styleClass="field-label"/>
                                <ComboBox fx:id="statusComboBox" promptText="Izaberite status"
                                          prefWidth="9999" styleClass="form-field"/>
                            </VBox>

                            <columnConstraints>
                                <ColumnConstraints percentWidth="50"/>
                                <ColumnConstraints percentWidth="50"/>
                            </columnConstraints>
                        </GridPane>
                    </VBox>

                    <!-- ACTIONS -->
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <!-- Delete button (left side, only in edit mode) -->
                        <HBox fx:id="deleteButtonContainer">
                            <Button fx:id="deleteButton"
                                    text="Obriši"
                                    onAction="#handleDelete"
                                    styleClass="delete-button"/>
                        </HBox>

                        <Region HBox.hgrow="ALWAYS"/>

                        <!-- Cancel and Save buttons (right side) -->
                        <Button text="Odustani"
                                onAction="#back"
                                styleClass="cancel-button"/>

                        <Button text="Sačuvaj"
                                onAction="#handleSave"
                                styleClass="save-button"/>
                    </HBox>
                </VBox>
            </ScrollPane>
        </center>

    </BorderPane>

</AnchorPane>