<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            styleClass="root-container" stylesheets="@styles.css" fx:controller="controller.ThesisController">

    <!-- Main Content Area -->
    <center>
        <VBox styleClass="main-content" spacing="25">
            <padding>
                <Insets top="40" right="50" bottom="40" left="50"/>
            </padding>

            <!-- Page Header -->
            <VBox spacing="8">
                <Text text="ZavrÅ¡ni radovi" styleClass="page-title"/>
                <Text text="Kompletan pregled i upravljanje zavrÅ¡nim radovima" styleClass="page-subtitle"/>
            </VBox>

            <!-- Action Bar -->
            <HBox spacing="15" alignment="CENTER_LEFT">
                <!-- Search Field -->
                <TextField fx:id="searchField" promptText="ðŸ” PretraÅ¾ite radove po naslovu, studentu ili mentoru..."
                           styleClass="search-field" prefWidth="450"/>

                <!-- Status Filter -->
                <ComboBox fx:id="statusFilter" promptText="Svi statusi" styleClass="status-filter" prefWidth="150">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Svi statusi"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Add New Button -->
                <Button fx:id="btnAddNew" text="+ Dodaj novi rad" styleClass="add-button" onAction="#handleAddNew"/>
            </HBox>

            <!-- Thesis Cards Container (ScrollPane) -->
            <ScrollPane fitToWidth="true" styleClass="cards-scroll-pane" VBox.vgrow="ALWAYS">
                <VBox fx:id="thesisCardsContainer" spacing="20" styleClass="cards-container"/>
            </ScrollPane>
        </VBox>
    </center>

</BorderPane>