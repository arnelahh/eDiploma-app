<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.SecretaryFormController"
            style="-fx-background-color: #f9f9f9;"
            stylesheets="@styles.css">

    <BorderPane prefWidth="1200" prefHeight="800"
                AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- TOP BAR -->
        <top>
            <HBox alignment="CENTER_LEFT" spacing="20"
                  style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">
                <padding>
                    <Insets top="20" left="20" bottom="20"/>
                </padding>

                <Button text="←"
                        onAction="#back"
                        style="-fx-font-size: 18; -fx-background-color: transparent; -fx-cursor: hand;"/>

                <Label text="eDiploma"
                       style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #6c5ce7;"/>
            </HBox>
        </top>

        <!-- CONTENT -->
        <center>
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox spacing="20" style="-fx-background-color: #f9f9f9;">
                    <padding>
                        <Insets top="30" right="50" bottom="30" left="50"/>
                    </padding>

                    <!-- TITLE (static) -->
                    <VBox spacing="5">
                        <Label text="Dodaj novog sekretara"
                               style="-fx-font-size: 24; -fx-font-weight: bold;"/>

                        <Label text="Unesite podatke o novom sekretaru"
                               style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    </VBox>

                    <!-- FORM CARD -->
                    <VBox spacing="20"
                          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 30;">

                        <!-- Section Title -->
                        <VBox spacing="5">
                            <Label text="Osnovni podaci"
                                   style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                            <Label text="Osnovni podaci o sekretaru i korisničkom nalogu"
                                   style="-fx-font-size: 12; -fx-text-fill: #888;"/>
                        </VBox>

                        <!-- Fields -->
                        <VBox spacing="15">

                            <VBox spacing="5">
                                <Label text="Ime" style="-fx-font-size: 13; -fx-text-fill: #555;"/>
                                <TextField fx:id="firstNameField"
                                           promptText="Unesite ime"
                                           styleClass="form-field"/>
                            </VBox>

                            <VBox spacing="5">
                                <Label text="Prezime" style="-fx-font-size: 13; -fx-text-fill: #555;"/>
                                <TextField fx:id="lastNameField"
                                           promptText="Unesite prezime"
                                           styleClass="form-field"/>
                            </VBox>

                            <VBox spacing="5">
                                <Label text="Zvanje" style="-fx-font-size: 13; -fx-text-fill: #555;"/>
                                <TextField fx:id="titleField"
                                           promptText="Unesite zvanje"
                                           styleClass="form-field"/>
                            </VBox>

                            <VBox spacing="5">
                                <Label text="Email adresa" style="-fx-font-size: 13; -fx-text-fill: #555;"/>
                                <TextField fx:id="emailField"
                                           promptText="Unesite email adresu"
                                           styleClass="form-field"/>
                            </VBox>

                            <Separator/>

                            <VBox spacing="5">
                                <Label text="Korisničko ime" style="-fx-font-size: 13; -fx-text-fill: #555;"/>
                                <TextField fx:id="usernameField"
                                           promptText="Unesite korisničko ime"
                                           styleClass="form-field"/>
                            </VBox>

                            <VBox spacing="5">
                                <Label text="Lozinka" style="-fx-font-size: 13; -fx-text-fill: #555;"/>
                                <PasswordField fx:id="passwordField"
                                               promptText="Unesite lozinku"
                                               styleClass="form-field"/>
                            </VBox>
                        </VBox>
                    </VBox>

                    <!-- ACTIONS -->
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <Region HBox.hgrow="ALWAYS"/>

                        <Button text="Odustani"
                                onAction="#back"
                                styleClass="cancel-button"/>

                        <Button text="Sačuvaj"
                                onAction="#handleSave"
                                styleClass="save-button"/>
                    </HBox>

                    <!-- Loader -->
                    <ProgressIndicator fx:id="loader"
                                       visible="false"
                                       prefWidth="50"
                                       prefHeight="50"/>
                </VBox>
            </ScrollPane>
        </center>

    </BorderPane>
</AnchorPane>
